<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="returns_label_orders" template="AuroraExtensions_SimpleReturns::returns/label/orders.phtml" cacheable="false">
                <arguments>
                    <argument name="view_model" xsi:type="object">AuroraExtensions\SimpleReturns\ViewModel\Orders</argument>
                    <argument name="column_headers" xsi:type="array">
                        <item name="order_number" xsi:type="string">Order #</item>
                        <item name="order_date" xsi:type="string">Date</item>
                        <item name="order_total" xsi:type="string">Order Total</item>
                        <item name="order_status" xsi:type="string">Order Status</item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
