        </div>
        <div class="row">
            <span class="title"><?= $block->escapeHtml(__('Package Carrier')) ?></span>
            <span class="value"><?= $block->escapeHtml(__('%1', $viewModel->getFrontendLabel('carriers', $carrierCode))) ?></span>
