<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Framework\App\RouterList">
        <arguments>
            <argument name="routerlist" xsi:type="array">
                <item name="auroraextensions_simplereturns_router" xsi:type="array">
                    <item name="class" xsi:type="string">AuroraExtensions\SimpleReturns\Controller\Router</item>
                    <item name="disable" xsi:type="boolean">false</item>
                    <item name="sortOrder" xsi:type="string">10</item>
                </item>
            </argument>
        </arguments>
    </type>
    <type name="AuroraExtensions\SimpleReturns\Controller\Router">
        <arguments>
            <argument name="data" xsi:type="array">
                <item name="dispatch" xsi:type="array">
                    <item name="simplereturns_orders_search" xsi:type="object">AuroraExtensions\SimpleReturns\Controller\Orders\Search</item>
                    <item name="simplereturns_orders_searchPost" xsi:type="object">AuroraExtensions\SimpleReturns\Controller\Orders\SearchPost</item>
                    <item name="simplereturns_orders_results" xsi:type="object">AuroraExtensions\SimpleReturns\Controller\Orders\Results</item>
                    <item name="simplereturns_rma_create" xsi:type="object">AuroraExtensions\SimpleReturns\Controller\Rma\Create</item>
                    <item name="simplereturns_rma_createPost" xsi:type="object">AuroraExtensions\SimpleReturns\Controller\Rma\CreatePost</item>
                    <item name="simplereturns_label_index" xsi:type="object">AuroraExtensions\SimpleReturns\Controller\Label\Index</item>
                </item>
            </argument>
        </arguments>
    </type>
    <type name="AuroraExtensions\SimpleReturns\Model\SystemModel\Module\Config">
        <arguments>
            <argument name="data" xsi:type="array">
                <item name="reasons" xsi:type="array">
                    <item name="arrived_too_late" xsi:type="string">Arrived Too Late</item>
                    <item name="damaged_items" xsi:type="string">Damaged Items</item>
                    <item name="missing_items" xsi:type="string">Missing Items</item>
                    <item name="no_longer_needed" xsi:type="string">No Longer Needed</item>
                    <item name="not_as_advertised" xsi:type="string">Does not look/work as advertised</item>
                    <item name="wrong_color" xsi:type="string">Wrong Color</item>
                    <item name="wrong_make" xsi:type="string">Wrong Make</item>
                    <item name="wrong_model" xsi:type="string">Wrong Model</item>
                    <item name="wrong_size" xsi:type="string">Wrong Size</item>
                    <item name="other" xsi:type="string">Other</item>
                </item>
                <item name="resolutions" xsi:type="array">
                    <item name="replacement" xsi:type="string">Replacement</item>
                    <item name="repair" xsi:type="string">Repair</item>
                    <item name="refund" xsi:type="string">Refund</item>
                    <item name="exchange" xsi:type="string">Exchange</item>
                    <item name="store_credit" xsi:type="string">Store Credit</item>
                </item>
            </argument>
        </arguments>
    </type>
</config>
