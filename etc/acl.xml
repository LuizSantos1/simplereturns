<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="AuroraExtensions_SimpleReturns::rma" title="RMA" translate="title" sortOrder="10">
                    <resource id="AuroraExtensions_SimpleReturns::rma_operation" title="Operations" translate="title" sortOrder="10">
                        <resource id="AuroraExtensions_SimpleReturns::rma_return" title="Returns" translate="title" sortOrder="10">
                            <resource id="AuroraExtensions_SimpleReturns::actions" title="Actions" translate="title" sortOrder="10">
                                <resource id="AuroraExtensions_SimpleReturns::create" title="Create" translate="title" sortOrder="10"/>
                                <resource id="AuroraExtensions_SimpleReturns::view" title="View" translate="title" sortOrder="20"/>
                            </resource>
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="AuroraExtensions_SimpleReturns::configuration" title="Simple Returns"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
