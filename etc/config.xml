<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <simplereturns>
            <general>
                <enable>0</enable>
            </general>
            <returns>
                <shipping_carrier>ups</shipping_carrier>
                <shipping_method>03</shipping_method>
                <order_amount_minimum>50.00</order_amount_minimum>
                <order_amount_maximum></order_amount_maximum>
                <order_age_maximum>30</order_age_maximum>
                <package_weight>5.00</package_weight>
                <recipient_first_name>Customer</recipient_first_name>
                <recipient_last_name>Service</recipient_last_name>
                <return_form_url></return_form_url>
            </returns>
            <origin>
                <company></company>
            </origin>
        </simplereturns>
    </default>
</config>
